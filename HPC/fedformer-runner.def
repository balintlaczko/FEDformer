Bootstrap: docker
From: pytorch/pytorch:2.1.0-cuda12.1-cudnn8-devel

# Apptainer definition file to run (train) the FEDformer model on HPC.

%post
    apt-get update
    pip3 install absl-py einops h5py keopscore opt-einsum pandas pytorch-wavelet PyWavelets scikit-image scikit-learn scipy statsmodels sympy tqdm matplotlib
    cd ..
    
    python3 run.py --is_training 1 --root_path data/RAVE_encoded_datasets --data_path vctk_rave_encoded.h5 --csv_path vctk_rave_encoded.csv --task_id RaveVctk --model FEDformer --data RAVEnc --seq_len 32 --label_len 16 --pred_len 8 --enc_in 8 --dec_in 8 --c_out 8 --embed token_only --itr 1 --moving_avg 6 --train_epochs 3 --num_workers 0 --batch_size 512
